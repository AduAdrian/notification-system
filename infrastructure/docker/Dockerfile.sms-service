FROM node:20-alpine AS builder
WORKDIR /app
COPY shared/ ./shared/
COPY package*.json tsconfig.json ./
COPY services/sms-service ./services/sms-service
RUN npm install --workspaces && npm run build --workspace=@notification-system/sms-service

FROM node:20-alpine
WORKDIR /app
COPY --from=builder /app/services/sms-service/dist ./dist
COPY --from=builder /app/services/sms-service/package.json ./
COPY --from=builder /app/node_modules ./node_modules
RUN mkdir -p logs
CMD ["node", "dist/index.js"]
